<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="70dp"
    android:orientation="vertical"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="2dp"

                app:cardBackgroundColor="@color/purple_200"


                app:cardPreventCornerOverlap="true"


                >
          <TextView
              android:layout_width="84dp"
              android:layout_height="35dp"
              android:textSize="19sp"
              android:textColor="@color/white"
              android:textColorHighlight="#673AB7"
              android:textStyle="bold"
               android:gravity="center"
              android:text="Music"
              >

          </TextView>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="2dp"

                app:cardBackgroundColor="@color/teal_200"


                app:cardPreventCornerOverlap="true"


                >
                <TextView
                    android:layout_width="84dp"
                    android:layout_height="35dp"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    android:textColorHighlight="#673AB7"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Naat"
                    >

                </TextView>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="2dp"

                app:cardBackgroundColor="?android:attr/colorActivatedHighlight"
                app:cardCornerRadius="10dp"

                app:cardElevation="10dp"


                app:cardPreventCornerOverlap="true"


                >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="Architecture"
                    android:textColor="@color/white"
                    android:textColorHighlight="#673AB7"
                    android:textSize="19sp"
                    android:textStyle="bold">

                </TextView>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="2dp"

                app:cardBackgroundColor="@color/purple_200"


                app:cardPreventCornerOverlap="true"


                >
                <TextView
                    android:layout_width="84dp"
                    android:layout_height="35dp"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    android:textColorHighlight="#673AB7"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Music"
                    >

                </TextView>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="2dp"

                app:cardBackgroundColor="@android:color/holo_green_dark"
                app:cardCornerRadius="10dp"

                app:cardElevation="10dp"


                app:cardPreventCornerOverlap="true"


                >

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="Notifications"
                    android:textColor="@color/white"
                    android:textColorHighlight="#673AB7"
                    android:textSize="19sp"
                    android:textStyle="bold">

                </TextView>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="2dp"

                app:cardBackgroundColor="#a83147"


                app:cardPreventCornerOverlap="true"


                >
                <TextView
                    android:layout_width="84dp"
                    android:layout_height="35dp"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    android:textColorHighlight="#673AB7"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Music"
                    >

                </TextView>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="2dp"

                app:cardBackgroundColor="#1f1f24"


                app:cardPreventCornerOverlap="true"


                >
                <TextView
                    android:layout_width="84dp"
                    android:layout_height="35dp"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    android:textColorHighlight="#673AB7"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Music"
                    >

                </TextView>


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </HorizontalScrollView>

    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:background="@color/Status">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"

        android:orientation="vertical"
        >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"


        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"

            android:src="@drawable/piccc">

        </ImageView>

        <View

            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:background="@color/Status">
        </View>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"

            android:src="@drawable/piccccc">

        </ImageView>

        <View

            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:background="@color/Status">
        </View>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"

            android:src="@drawable/picc">

        </ImageView>
        <View

            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:background="@color/Status">
        </View>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"

            android:src="@drawable/picc">

        </ImageView>


    </LinearLayout>



    </ScrollView>

</LinearLayout>


</LinearLayout>